{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "defaultValue": "kubetestcluster"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "containerRegName": {
            "type": "string",
            "defaultValue": "kubetestrg"
        },
        "clientId": {
            "type": "string"
        },
        "clientSecret": {
            "type": "securestring"
        },
        "agentPoolName": {
            "type": "string",
            "defaultValue": "agentpool"
        },
        "agentCount": {
            "type": "int",
            "defaultValue": 2,
            "minValue": 1,
            "maxValue": 50
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_A2_v2",
            "allowedValues": [
                "Standard_A2_v2",
                "Standard_A2m_v2",
                "Standard_A4_v2",
                "Standard_A4m_v2",
                "Standard_A8_v2",
                "Standard_A8m_v2"
            ]
        },
        "osType": {
            "type": "string",
            "defaultValue": "Linux",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.15.11",
            "allowedValues": [
                "1.15.10",
                "1.15.11",
                "1.16.8",
                "1.16.9"
            ]
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "kubetestdns"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "azureUser"
        },
        "sshPub": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('containerRegName')]",
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "adminUserEnabled": true
            }
        },
        {
            "name": "[parameters('clusterName')]",
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-02-01",
            "location": "[parameters('location')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "dnsPrefix": "[parameters('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "[parameters('agentPoolName')]",
                        "count": "[parameters('agentCount')]",
                        "vmSize": "[parameters('vmSize')]",
                        "osType": "[parameters('osType')]",
                        "storageProfile": "ManagedDisks"
                    }
                ],
                "linuxProfile": {
                    "adminUsername": "[parameters('adminUsername')]",
                    "ssh": {
                        "publicKeys": [
                            {
                                "keyData": "[parameters('sshPub')]"
                            }
                        ]
                    }
                },
                "servicePrincipalProfile": {
                    "clientId": "[parameters('clientId')]",
                    "secret": "[parameters('clientSecret')]"
                    // "clientId": "[reference(resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName')), '2020-02-01', 'Full').properties.servicePrincipalProfile.clientId]",
                }
            }
        }
    ]
}